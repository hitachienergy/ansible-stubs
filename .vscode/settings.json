{
    // --- Common ---
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "trailing-spaces.highlightCurrentLine": false, // highlighting currently edited line can be annoying
    "trailing-spaces.syntaxIgnore": [
        "markdown", // "two spaces" syntax is for line breaks
    ],
    // --- JSONC ---
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    // --- Markdown ---
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    // --- Python ---
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        /*
        It is expected to update the stub files after updating the major or minor version of ansible-core.
        Comparing the files generated by the stubgen tool is really useful to do that.
        Thus, we want to keep the original formatting to easily compare changes between versions.
        */
        "editor.formatOnSave": false,
        "editor.formatOnType": false,
    },
    // mypy-type-checker (pre-release) ships with mypy 1.8 while latest is 1.10
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.preferDaemon": true,
    // --- YAML ---
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
}
